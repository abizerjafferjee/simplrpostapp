<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:src="@drawable/back_arrow_icon" />

            <TextView
                android:id="@+id/txt_titleHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/proximanova_semibold"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_bookmark_border_black_24dp"
                android:drawablePadding="6dp"
                android:drawableTint="@color/colorWhite"
                android:fontFamily="@font/proximanova_regular"
                android:gravity="center"
                android:text="   "
                android:paddingRight="16dp"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
            <ImageButton
                android:id="@+id/btn_deleteAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:visibility="gone"
                android:layout_marginRight="6dp"
                android:tint="@color/colorWhite"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete_black_24dp"/>
            <ImageButton
                android:id="@+id/btn_editAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:visibility="gone"
                android:layout_marginRight="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                class="com.codeapex.simplrpostprod.Activity.WorkaroundMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:tag="map" />

            <TextView
                android:id="@+id/tag"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_corner"
                android:elevation="2dp"
                android:fontFamily="@font/proximanova_regular"
                android:gravity="center"
                android:text="Public"
                android:layout_alignParentRight="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btn_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tag"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_circle"
                android:elevation="2dp"
                android:src="@drawable/directions_icon"/>

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btn_direction"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_circle"
                android:elevation="2dp"
                android:src="@drawable/share_icon"/>

            <ImageButton
                android:id="@+id/btn_currentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btn_share"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_circle"
                android:elevation="2dp"
                android:visibility="gone"
                android:src="@drawable/current_location"/>
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/bottom_sheet_view_address" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>