<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/root_lay"
    android:paddingTop="@dimen/_6sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrayy">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhiteE">

                <TextView
                    android:id="@+id/txt_msg_profileComplete"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorgrayy"
                    android:visibility="gone"
                    android:text="Complete your profile."
                    android:textSize="15sp"
                    android:fontFamily="@font/proximanova_regular"
                    android:paddingLeft="16dp"
                    android:gravity="left|center"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorgrayy"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/toolbar_lay"
                                android:layout_marginBottom="15dp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"

                                    android:layout_height="120dp"
                                    android:layout_marginTop="30dp"
                                    android:src="@drawable/publicdefault" />

                                <TextView

                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/feedback_imo"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:fontFamily="@font/proximanova_regular"
                                    android:gravity="center"
                                    android:text="It is always good to hear It is always good to hear from you and how we can make ourselves more valuable for you."
                                    android:textSize="15dp" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyecler"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                                android:visibility="visible">

                            </androidx.recyclerview.widget.RecyclerView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/consEmptyScreen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="80dp"
                                android:layout_marginBottom="20dp"
                                android:visibility="gone"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="346dp">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="235dp"
                                    android:layout_height="128dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/privatedefault"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="8dp"
                                    android:text="No location found"
                                    android:textSize="15dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.493"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                                    app:layout_constraintVertical_bias="0.0" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorgrayy"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="29dp"
                                    android:layout_weight="0.8"
                                    android:fontFamily="@font/proximanova_semibold"
                                    android:gravity="center_vertical"
                                    android:text="Public Locations"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="16dp" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyeclerr"
                                android:layout_width="match_parent"


                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp">


                            </androidx.recyclerview.widget.RecyclerView>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/toolbar_lay"
                                android:layout_marginBottom="20dp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/feedback_imo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:layout_marginTop="30dp"
                                    android:src="@drawable/publicdefault" />

                                <TextView

                                    android:id="@+id/content_feedback"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/feedback_imo"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:fontFamily="@font/proximanova_regular"
                                    android:gravity="center"
                                    android:text="It is always good to hear It is always good to hear from you and how we can make ourselves more valuable for you."
                                    android:textSize="15dp" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data found."
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/bottom_sheet_txt_hint_clr"
            android:fontFamily="@font/proximanova_regular"/>
    </FrameLayout>


    <ProgressBar
        android:id="@+id/Loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>