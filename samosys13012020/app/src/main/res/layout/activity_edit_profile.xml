<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activity.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/toolbar_lay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/back_press"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/proximanova_bold"
            android:text="Edit Profile"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="3dp"
            android:src="@drawable/myaddressplus"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/root_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">


                    <androidx.cardview.widget.CardView


                        android:id="@+id/cardView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:shape="ring"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        app:cardCornerRadius="50dp">

                        <androidx.cardview.widget.CardView


                            android:id="@+id/cardViewWhiteBG"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_gravity="center"
                            android:shape="ring"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="48dp">


                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:shape="ring"
                                app:cardCornerRadius="45dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imgUserImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/round"
                                        android:visibility="visible" />

                                    <ProgressBar
                                        android:id="@+id/progressBarImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_centerInParent="true"
                                        android:visibility="visible" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        app:srcCompat="@drawable/editptofile" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanova_bold"
                android:text="9755410567"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EdtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/proximanova_regular"
                android:hint="Full name"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgray_" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/EdtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/proximanova_regular"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtVerifyEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proximanova_regular"
                    android:text="Verify"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgray_" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/proximanova_regular"
                    android:theme="@android:style/Widget.Holo.Light.DropDownItem.Spinner">

                </Spinner>

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="1dp"
                    android:drawableRight="@drawable/ic_info"
                    android:drawableTint="@color/colorBlack"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/colorgray_" />

            <EditText
                android:id="@+id/edt_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/proximanova_regular"
                android:hint="Your answer"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="18dp"
                android:visibility="gone" />

            <View
                android:id="@+id/edt_line_answer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorgray_" />

            <Button
                android:id="@+id/submit_button_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/rel"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:background="@drawable/sign_up_btn_bg"
                android:fontFamily="@font/proximanova_semibold"
                android:gravity="center"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>