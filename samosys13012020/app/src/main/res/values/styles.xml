    <style name="Tooltip">
        <item name="android:textSize">16sp</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="cornerRadius">10dp</item>
        <!--<item name="android:drawableTop">@drawable/ic_android_black_24dp</item>-->
        <item name="android:drawableStart">@drawable/ic_android_black_24dp</item>
        <!--<item name="android:drawableBottom">@drawable/ic_android_black_24dp</item>-->
        <!--<item name="android:drawableEnd">@drawable/ic_android_black_24dp</item>-->
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Tooltip2">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:spacing">16dp</item>
        <item name="android:fontFamily">@font/proximanova_regular</item>
        <item name="backgroundColor">#A5A3A3</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorWhite</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#5F5F5F</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorWhiteE</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/proximanova_regular</item>
        <item name="android:textColor">@color/bottom_sheet_title_clr</item>
        <item name="android:textSize">17dp</item>
    </style>

    //opencodelocation

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
