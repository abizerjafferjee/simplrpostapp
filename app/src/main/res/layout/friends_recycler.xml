<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteE"
    android:id="@+id/root_lay"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar_lay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:id="@+id/back_press"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_arrow"
            />


        <TextView
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/proximanova_semibold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Friends"
            android:id="@+id/txtTitle"

            android:textSize="18dp" />

        <ImageView
           android:visibility="gone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="3dp"
            android:src="@drawable/myaddressplus"

            />



    </RelativeLayout>











    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="@color/colorPrimaryDark"

        android:id="@+id/cvFinalImage"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_lay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border">

            <TextView
                android:background="@color/colorPrimaryDark"

                android:fontFamily="@font/proximanova_semibold"
                android:id="@+id/txtCurrentPost"
                android:layout_width="150dp"
                android:layout_height="40dp"


                android:gravity="center"
                android:textColor="#fff"

                android:text="Public Location"


                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:background="@drawable/whitetwo"
                android:fontFamily="@font/proximanova_semibold"
                android:id="@+id/txtHistoryPost"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"

                android:textColor="@color/colorAccent"
                android:text="Private Location"

                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txtCurrentPost"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/txtCurrentPost"
                app:layout_constraintTop_toTopOf="@+id/txtCurrentPost" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_marginTop="120dp"
        android:id="@+id/publicaddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvFinalImage"
        app:layout_constraintVertical_bias="0.050000012"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />






        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclervieww"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvFinalImage"
            app:layout_constraintVertical_bias="0.050000012"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />



        <ScrollView
            android:id="@+id/publicdefualt"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cvFinalImage"
            android:fillViewport="true">>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_lay">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:id="@+id/feedback_imo"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/publicdefault" />

                <TextView
                    android:fontFamily="@font/proximanova_regular"
                    android:id="@+id/content_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feedback_imo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                   android:text="No saved public locations are found"
                    android:textSize="15dp" />



            </RelativeLayout>
        </ScrollView>


        <ScrollView

            android:id="@+id/privatedeault"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cvFinalImage"
            android:fillViewport="true">>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_lay">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:id="@+id/feedback_imoo"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/privatedefault" />

                <TextView
                    android:fontFamily="@font/proximanova_regular"
                    android:id="@+id/content_feedbackk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feedback_imoo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="No saved private locations are found"
                    android:textSize="15dp" />



            </RelativeLayout>
        </ScrollView>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/Loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consEmptyScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imdError"
            android:layout_width="235dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imdError"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>