<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_lay"
    android:background="@color/colorWhiteE"
    tools:context=".Activity.EditProfileActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/toolbar_lay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorWhiteE"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="6dp"
                        android:id="@+id/back_press"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/back_arrow"
                        />


                    <TextView
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/proximanova_semibold"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Edit Profile"

                        android:textSize="18dp" />

                    <ImageView
                        android:visibility="gone"

                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:padding="3dp"
                        android:src="@drawable/myaddressplus"

                        />









                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/top"

                    android:layout_width="match_parent"

                    android:layout_marginTop="20dp"
                    android:layout_height="150dp">


                    <LinearLayout

                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView


                            android:id="@+id/cardView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:shape="ring"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="50dp">

                            <androidx.cardview.widget.CardView


                                android:id="@+id/cardViewWhiteBG"
                                android:layout_gravity="center"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:shape="ring"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="48dp">


                                <androidx.cardview.widget.CardView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:shape="ring"
                                    app:cardCornerRadius="45dp">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/imgUserImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/round"
                                        android:adjustViewBounds="true"
                                        android:scaleType="centerCrop"
                                        android:visibility="visible" />







                                </androidx.cardview.widget.CardView>


                            </androidx.cardview.widget.CardView>




                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <RelativeLayout

                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginTop="90dp"

                        android:layout_width="match_parent"

                        android:layout_height="50dp">


                        <ImageView


                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"

                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"

                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="0dp"

                            app:srcCompat="@drawable/editptofile" />

                    </RelativeLayout>




                </RelativeLayout>









                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    >
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/EdtName"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/proximanova_regular"
                            android:singleLine="true"
                            android:layout_weight=".8"
                            android:layout_width="0dp"
                            android:textSize="16dp"
                            android:maxLines="1"
                            android:layout_height="match_parent"
                            android:hint="Name"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:gravity="center_horizontal">
                        <EditText
                            android:id="@+id/EdtUserName"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/proximanova_regular"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_weight=".8"
                            android:textSize="16dp"
                            android:layout_height="match_parent"
                            android:hint="User Name"
                            />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:gravity="center_horizontal">
                        <EditText
                            android:id="@+id/EdtEmail"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/proximanova_regular"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_weight=".8"
                            android:textSize="16dp"
                            android:layout_height="match_parent"
                            android:hint="Email"
                            />

                        <TextView
                            android:id="@+id/txtVerifyEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/proximanova_regular"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:gravity="center_horizontal">


                        <Spinner
                            android:id="@+id/spinnerPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="10dp"
                            android:paddingLeft="20dp"
                            android:translationX="-10dp">
                        </Spinner>

                        <EditText
                            android:id="@+id/EdtContactNO"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/proximanova_regular"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_weight=".85"
                            android:textSize="16dp"
                            android:layout_height="match_parent"
                            android:hint="Phone Number"
                            android:translationX="-15dp"
                            />
                        <TextView
                            android:id="@+id/txtVerifyPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:textColor="@color/colorPrimaryDark"
                            android:translationX="-15dp"
                            android:fontFamily="@font/proximanova_regular"
                            />
                    </LinearLayout>
                </RelativeLayout>


                <Button
                    android:id="@+id/submit_button_id"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/rel"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_corner"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />






            </LinearLayout>


        </ScrollView>


    </LinearLayout>









    <ProgressBar
        android:id="@+id/Loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>