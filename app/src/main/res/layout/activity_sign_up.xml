<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteE"
    android:id="@+id/root_lay"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/colorWhiteE"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="8dp"
            android:background="@color/colorWhiteE"
            android:id="@+id/toolbar_lay"
            >
            <ImageView

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="6dp"
                android:id="@+id/back_press"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_arrow"
                android:visibility="gone"
                />

            <TextView
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/proximanova_semibold"
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:id="@+id/toolbar_text"

                />


        </RelativeLayout>

        <ScrollView
            android:background="@color/colorWhiteE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_lay">


            <LinearLayout
                android:background="@color/colorWhiteE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_below="@id/toolbar_lay"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   >

                    <RelativeLayout
                        android:id="@+id/relativetop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       >

                        <androidx.cardview.widget.CardView
                            app:cardElevation="5dp"
                            android:layout_width="360dp"
                            android:layout_height="350dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"

                            android:layout_marginTop="20dp"
                            android:layout_marginRight="25dp"
                            android:background="@color/colorWhite"
                            app:cardCornerRadius="30dp">


                            <LinearLayout
                                android:layout_width="wrap_content"

                                android:layout_height="350dp"

                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/liner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"

                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="5dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">


                                    <View

                                        android:id="@+id/signup_view"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/personal_indo_lable"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginTop="40dp"
                                        android:layout_weight="0.25"
                                        android:background="@color/colorPrimary" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/circularimage"

                                        android:layout_width="0dp"
                                        android:layout_height="80dp"

                                        android:layout_gravity="center"
                                        android:layout_weight="0.38"
                                        android:src="@drawable/round" />


                                    <View
                                        android:layout_width="0dp"

                                        android:layout_height="2dp"
                                        android:layout_below="@+id/personal_indo_lable"
                                        android:layout_marginTop="40dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="0.25"
                                        android:background="@color/colorPrimary" />


                                </LinearLayout>


                                <TextView
                                    android:visibility="gone"
                                    android:fontFamily="@font/proximanova_semibold"
                                    android:id="@+id/signup"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Sign Up"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="20dp"
                                   />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/signupbackground_card">


                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"

                                        android:orientation="horizontal">


                                        <ImageView

                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/sign_upediconone" />


                                        <EditText
                                            android:inputType="textPersonName"
                                            android:maxLines="1"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:id="@+id/signup_name"
                                            android:fontFamily="@font/proximanova_regular"


                                            android:layout_width="match_parent"
                                            android:textSize="18dp"

                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="5dp"
                                            android:background="@android:color/transparent"
                                            android:hint="Name"
                                            />


                                    </LinearLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/signupbackground_card">


                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"

                                        android:orientation="horizontal">


                                        <ImageView

                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/signuped_icontwo" />


                                        <EditText
                                            android:inputType="textPersonName"
                                            android:maxLines="1"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:id="@+id/signup_username"
                                            android:fontFamily="@font/proximanova_regular"


                                            android:layout_width="match_parent"
                                            android:textSize="18dp"

                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="5dp"
                                            android:background="@android:color/transparent"
                                            android:hint="Username"
                                            />


                                    </LinearLayout>


                                </RelativeLayout>





                                <LinearLayout
                                    android:id="@+id/linear"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:fontFamily="@font/proximanova_regular"

                                        android:layout_width="wrap_content"
                                        android:textColor="@color/colorBlack"
                                        android:layout_height="wrap_content"
                                        android:text="Already Have an account? "
                                        android:textSize="14dp" />

                                    <TextView
                                        android:fontFamily="@font/proximanova_bold"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sign In"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="14dp" />


                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:background="@color/colorWhiteE"
                        android:id="@+id/layoutBottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@id/relativetop"

                        >

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        app:cardElevation="10dp"
                        android:id="@+id/cardView4"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_below="@+id/layoutBottom"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="-48dp"
                        android:layout_marginBottom="20dp"
                        android:adjustViewBounds="true"

                        app:cardBackgroundColor="@color/colorWhiteE"
                        app:cardCornerRadius="43dp">

                        <de.hdodenhof.circleimageview.CircleImageView


                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/signauparrow" />


                    </androidx.cardview.widget.CardView>


                    <RelativeLayout

                        android:id="@+id/viewrel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/cardView4">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"

                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <View


                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_below="@+id/personal_indo_lable"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"

                                android:layout_weight="0.1"
                                android:background="@color/colorPrimary" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="33dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.15"
                                android:fontFamily="@font/proximanova_semibold"
                                android:gravity="center"
                                android:src="@drawable/round"
                                android:text="OR"
                                android:textColor="@color/colorBlack"
                                android:textSize="18dp" />


                            <View
                                android:layout_width="0dp"

                                android:layout_height="2dp"
                                android:layout_below="@+id/personal_indo_lable"

                                android:layout_marginRight="20dp"
                                android:layout_weight="0.1"
                                android:background="@color/colorPrimary" />


                        </LinearLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/soical"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_below="@+id/viewrel"
                        android:layout_centerHorizontal="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"

                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/proximanova_regular"
                                android:gravity="center"
                                android:text="Sign Up Using "
                                android:textSize="15dp" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@color/colorWhiteE"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/soical"
                        android:layout_centerHorizontal="true">


                        <LinearLayout
                            android:layout_marginBottom="10dp"



                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">



                            <androidx.cardview.widget.CardView
                                android:id="@+id/googleButton"
                                app:cardCornerRadius="19dp"
                                android:layout_width="150dp"
                                app:cardElevation="6dp"
                                app:cardBackgroundColor="@color/colorRed"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                >

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="40dp"


                                    android:orientation="horizontal">


                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:src="@drawable/google" />


                                    <TextView
                                        android:fontFamily="@font/proximanova_semibold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center"
                                        android:text="Google"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>



                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="19dp"
                                android:layout_width="150dp"
                                app:cardElevation="6dp"
                                android:id="@+id/btnFacebookLogin"
                                app:cardBackgroundColor="@color/colorBule"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="40dp"

                                    >

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:src="@drawable/facebook" />


                                    <TextView
                                        android:fontFamily="@font/proximanova_semibold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="8dp"
                                        android:gravity="center"
                                        android:text="Facebook"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:layout_marginBottom="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>