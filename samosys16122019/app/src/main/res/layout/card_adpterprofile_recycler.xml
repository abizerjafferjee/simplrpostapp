<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="#80000000"
    android:visibility="visible">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/colorLightBule"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:shape="ring"
                    app:cardCornerRadius="30dp">
                    <ImageView
                        android:id="@+id/imagee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_private"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lnlytPrivateContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".55"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/proximanova_semibold"
                        android:text="Loreum Ipsum"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:fontFamily="@font/proximanova_semibold"
                        android:text="8GCMRECT+X6"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight=".25"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorLightBule"
                        android:fontFamily="@font/proximanova_semibold"
                        android:gravity="center"
                        android:text=" Private "
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/lnlytSharePrivate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".18"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView


                        android:id="@+id/sharePrivate"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".8"

                        android:scaleType="fitCenter"
                        android:src="@drawable/share" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVieww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/colorBrown"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/llineart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:shape="ring"
                    app:cardCornerRadius="30dp">
                    <ImageView
                        android:id="@+id/imagepublic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_public"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnlytPublicContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight=".55"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/namepublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanova_semibold"
                        android:text="Apllo Hospital, Delhi"
                        android:textColor="@color/colorBlack"
                        android:maxLines="1"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/addreses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:fontFamily="@font/proximanova_regular"
                        android:text="Hospital" />

                    <TextView
                        android:id="@+id/pluscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:fontFamily="@font/proximanova_semibold"
                        android:text="8GCMRECT+X6"
                        android:textColor="@color/colorBlack" />


                    <!--<TextView-->
                    <!--android:layout_marginRight="50dp"-->
                    <!--android:visibility="visible"-->
                    <!--android:id="@+id/descrpition"-->
                    <!--android:fontFamily="@font/proximanova_regular"-->
                    <!--android:layout_marginLeft="14dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:maxLines = "2"-->
                    <!--android:text="Hospital"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight=".25"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBrown"
                        android:fontFamily="@font/proximanova_semibold"
                        android:gravity="center"
                        android:text=" Public "
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lnlytSharePublic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".18"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView


                        android:id="@+id/sharePublic"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".8"

                        android:scaleType="fitCenter"
                        android:src="@drawable/share" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>




